@{
    Freelancer f = new Freelancer();
    Client c = new Client();
    User u = new User();
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-2 logo">
                    <a href="/home/"><img src="~/Images/logo.png"></a>
                </div>
                <div class="col-md-7">

                </div>
                <div class="col-md-3 text-right buttons">
                    <a href="/User/Login/" class="btn btn-primary">Login</a>
                </div>
            </div>
        </div>
    </header>
    @using (Html.BeginForm("SignUp", "User", FormMethod.Post))
    {
        <section id="login-form">
            <div class="container">
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4 contest-form">

                        <form action="/User/SignUp/" method="post">

                            
                            <div class="form-group">
                                <label class="control-label col-md-12">
                                    Email:
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(ul => u.Email_id, htmlAttributes: new { @class = "form-control", @required = "", @type = "email" })
                                    <!-- <input type="email" name="email_id" class="form-control" required>-->
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-12">
                                    Password:
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(ul => u.Password, htmlAttributes: new { @class = "form-control", @required = "", @type = "password" })
                                    <!--  <input type="password" class="form-control" name="password" required>-->
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-12">
                                    Freelancer Name:
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(fl => f.Freelancer_name, htmlAttributes: new { @class = "form-control", @required = "", @type = "text" })
                                    <!-- <input type="text" class="form-control" name="contact_no" required>-->
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-12">
                                    Client Name:
                                </label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(cl => c.Client_name, htmlAttributes: new { @class = "form-control", @required = "", @type = "text" })
                                    <!--<input type="text" class="form-control" name="skills" required>-->
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input type="submit" class="btn btn-primary buttons" value="SignUp">
                                </div>
                            </div>
                            <strong class="text-danger" style="font-size:14px;margin-left:15px;">Sign Up error</strong>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>
